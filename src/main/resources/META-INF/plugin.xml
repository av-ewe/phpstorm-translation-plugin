<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.phpstormtranslationplugin</id>
    <name>TYPO3 LLL (PHPStorm)</name>
    <vendor>av-ewe</vendor>
    <version>0.0.2</version>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.Bundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.phpstormtranslationplugin.toolWindow.PluginToolWindowFactory"
                id="TranslationSettings"
                icon="/icons/plugin-logo.svg"
                anchor="right"
        />
        <fileType name="XLF File"
                  language="XML"
                  implementationClass="com.phpstormtranslationplugin.xlf.XlfFileType"
                  extensions="xlf"
        />
        <applicationConfigurable
                displayName="TYPO3 LLL"
                parentId="tools"
                instance="com.phpstormtranslationplugin.PluginSettingsConfigurable"
        />
        <applicationService
                serviceImplementation="com.phpstormtranslationplugin.PluginSettings"
        />

    </extensions>
    <applicationListeners>
        <listener class="com.phpstormtranslationplugin.listeners.MyApplicationActivationListener" topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
    <actions>
        <action
                id="com.phpstormtranslationplugin.UpdateTranslationAction"
                class="com.phpstormtranslationplugin.UpdateTranslationAction"
                text="Update Translation"
                description="Update or add translations to TYPO3's locallang files"
                icon="AllIcons.General.LocalizationSettings">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl COMMA"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
    <idea-version since-build="233" until-build="243.*" />
</idea-plugin>
